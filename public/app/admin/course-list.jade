.container
    .row
        .col-md-12
            h1.page-header Courses
        .col-md-12
            .well
                form.form-inline
                    .form-group
                        input.form-control(ng-model="searchText", placeholder="Filter Text")
                    .form-group
                        select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
            table.table.table-hover.table-striped.table-condensed
                thead
                    tr
                        th Title
                        th Published Date
                        th Actions
                    tbody
                        tr(ng-repeat="course in courses | filter:searchText | orderBy:sortOrder")
                            td {{course.title}}
                            td {{course.published | date}}
                            td
                                button.btn.btn-primary.row-action-buttons View
                                button.btn.btn-warning.row-action-buttons Edit
                                button.btn.btn-danger.row-action-buttons Delete