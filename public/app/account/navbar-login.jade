.navbar-right(ng-controller="mvNavBarLoginCtrl")
    form.navbar-form(ng-hide="identity.isAuthenticated()")
        .form-group
            input.form-control(placeholder="Email", ng-model="username" required)
        .form-group
            input.form-control(placeholder="Password", type="password", ng-model="password" required)
        button.btn.btn-primary(ng-click="signin(username, password)") Sign In
        a.btn.btn-warning(href="/signup" data-toggle="tooltip" data-placement="left" title="Register yourself at multivision!" role="button") Sign Up
    ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
        li.dropdown
            a.dropdown-toggle(href="", data-toggle="dropdown")
                span.glyphicon.glyphicon-user
                | &nbsp; {{identity.currentUser.firstName + " " + identity.currentUser.lastName}}
                b.caret
            ul.dropdown-menu
                li(ng-show="identity.currentUser.isAdmin()")
                    a(href="/admin/users") User Admin
                li
                    a(href="", ng-click="signout()") Sign Out
                li
                    a(href="/myprofile") My Profile